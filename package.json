{
  "name": "@a4xrbj1/meteor-desktop",
  "version": "4.1.0",
  "bin": {
    "meteor-desktop": "dist/bin/cli.js"
  },
  "engines": {
    "node": ">=22.22.0"
  },
  "description": "Build a Meteor's desktop client with hot code push.",
  "main": "dist/index.js",
  "scripts": {
    "test": "cross-env NODE_ENV=test nyc mocha -t 10000 -r ./tests/helpers/clear.js \"tests/+(unit|functional)/**/*.test.js\"",
    "test-integration": "mocha -t 10000 -r @meteorjs/reify \"tests/+(integration)/**/*.test.js\"",
    "test-watch": "mocha -r ./tests/helpers/clear.js --compilers js:@babel/register \"tests/+(unit|functional)/**/*.test.js\" --watch",
    "lint": "eslint lib plugins scaffold skeleton tests",
    "prepare-integration-tests": "node tests/integration/prepare.js",
    "coverage-html": "nyc report --reporter=lcov",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "report-coverage": "nyc report --reporter=lcov > coverage.lcov && codecov",
    "version": "node dist/scripts/propagateVersion.js && git add plugins",
    "postversion": "npm run publish-npm",
    "postinstall": "path-exists dist/scripts/addToScripts.js && node dist/scripts/addToScripts || echo",
    "publish-plugins": "(cls || reset) && cd plugins/bundler && (meteor publish --release=METEOR@2.6.1) && cd ../watcher && (meteor publish --release=METEOR@2.6.1)",
    "prepublish": "npm run build || echo",
    "publish-npm": "npm publish && git push origin master --tags",
    "publish-npm-preview": "npm publish --tag preview && git push origin master --tags",
    "publish-all": "npm run publish-plugins && npm run publish-npm",
    "publish-all-preview": "npm run publish-plugins && npm run publish-npm-preview",
    "build": "babel lib --out-dir dist --source-maps inline --copy-files",
    "build-watch": "babel lib --watch --out-dir dist --source-maps inline --copy-files",
    "develop": "npm-run-all --parallel build-watch test-watch",
    "generate-docs": "jsdoc2md skeleton/preload.js > docs/api/desktop.md && jsdoc2md skeleton/modules/module.js > docs/api/module.md",
    "update-locks": "(rmdir /S /Q node_modules || rm -rf node_modules || echo) && yarn && (rmdir /S /Q node_modules || rm -rf node_modules) && npm i",
    "desktop": "meteor-desktop"
  },
  "author": "Andreas West <andreas@interactivethings.io>",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "7.28.6",
    "@babel/register": "7.28.6",
    "@electron/packager": "^19.0.5",
    "@meteorjs/reify": "^0.25.4",
    "@types/fs-extra": "11.0.4",
    "babel-plugin-istanbul": "^7.0.1",
    "chai": "^6.2.2",
    "chai-as-promised": "^8.0.2",
    "codecov": "3.8.3",
    "connect": "3.7.0",
    "connect-modrewrite": "0.10.2",
    "coveralls": "3.1.1",
    "cross-env": "^10.1.0",
    "dirty-chai": "^3.0.0",
    "eslint": "8.57.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-plugin-import": "2.32.0",
    "find-port": "^3.0.0",
    "fs-extra": "11.3.3",
    "fs-plus": "^3.1.1",
    "import-fresh": "^3.3.1",
    "jsdoc-to-markdown": "^9.1.3",
    "mime": "^4.1.0",
    "mocha": "^11.7.5",
    "mockery": "2.1.0",
    "npm-run-all": "4.1.5",
    "nyc": "^17.1.0",
    "proxyquire": "^2.1.3",
    "queue": "^7.0.0",
    "rewire": "^9.0.1",
    "run-sequence": "^2.2.1",
    "semistandard": "^17.0.0",
    "send": "1.2.1",
    "serve-static": "^2.2.1",
    "server-destroy": "1.0.1",
    "sha1-file": "^3.0.0",
    "sinon": "^21.0.1",
    "sinon-chai": "^4.0.1",
    "spectron": "19.0.0",
    "temp-dir": "^3.0.0",
    "watch": "1.0.2"
  },
  "dependencies": {
    "@babel/core": "7.29.0",
    "@babel/preset-env": "7.29.0",
    "@babel/runtime": "7.28.6",
    "@electron/asar": "^4.0.1",
    "acorn": "8.15.0",
    "cacache": "^20.0.3",
    "commander": "^14.0.3",
    "cross-spawn": "7.0.6",
    "del": "^8.0.1",
    "install-local": "^4.1.0",
    "isbinaryfile": "^5.0.0",
    "lodash": "4.17.23",
    "md5": "2.3.0",
    "node-fetch": "3.3.2",
    "path-exists-cli": "^2.0.0",
    "regenerator-runtime": "0.14.1",
    "rimraf": "6.1.3",
    "semver": "^7.7.4",
    "shelljs": "^0.10.0",
    "single-line-log": "1.1.2",
    "terser": "^5.46.0"
  },
  "peerDependencies": {
    "app-builder-lib": "*",
    "electron-builder": "*"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/a4xrbj1/meteor-desktop.git"
  },
  "keywords": [
    "electron",
    "meteor",
    "packager",
    "desktop"
  ],
  "nyc": {
    "exclude": [
      ".reify-cache",
      "dist",
      "node_modules",
      "plugins",
      "tests",
      "scaffold",
      "lib",
      "devEnvSetup.js"
    ],
    "require": [
      "@babel/register"
    ],
    "sourceMap": false,
    "instrument": false,
    "all": true
  },
  "bugs": {
    "url": "https://github.com/a4xrbj1/meteor-desktop/issues"
  },
  "homepage": "https://github.com/a4xrbj1/meteor-desktop"
}
